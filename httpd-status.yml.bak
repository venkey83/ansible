---
- hosts: webservers
  remote_user: root
  tasks:
    - name: stop apache
      service:
        name: httpd
        state: stopped
    - name: shell cmd
      shell: sleep 3
    - name: start apache
      service:
         name: httpd
         state: started
    - name: Check if Apache is running
      #  shell: pgrep apache2
      command: systemctl status httpd
      ignore_errors: yes
      changed_when: false
      register: service_apache_status


